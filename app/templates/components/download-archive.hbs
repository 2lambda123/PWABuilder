<button class="pwa-button {{if isColored 'pwa-button--spaced' 'pwa-button--simple'}} {{if isEnabled 'isEnabled'}}" {{action "handleClick"}}>
  {{linkMessage}}
  {{#if isBuilding}}
    <span class="pwa-generator-loading">
      {{fa-icon "circle-o-notch fa-spin"}}
    </span>
  {{/if}}
</button>
{{yield}}
