<p>
  <button class="pwa-button pwa-button--simple {{if isEnabled 'isEnabled'}}" {{action "handleClick"}}>
    {{linkMessage}}
    {{#if isBuilding}}
      <span class="pwa-generator-loading">
        {{fa-icon "circle-o-notch fa-spin"}}
      </span>
    {{/if}}
  </button>
</p>
{{#if showDialog}}
<div class="pwa-modal">
  <div class="pwa-modal-box">
    <h5 class="pwa-modal-title">
      Publish Package
    </h5>
    <div class="pwa-modal-body">
      <div class="pwa-generator-field">
        <label class="pwa-generator-label">Name or Company Name</label>
        {{input class="pwa-generator-input" value=name placeholder="Enter a Name or Company Name"}}
      </div>
      {{#if missingName}}
        <p class="pwa-generator-error">
            <i class="fa fa-exclamation"></i> Please, provide the name or company name.
        </p>
      {{/if}}

      <div class="form-item">
        <label class="pwa-generator-label">E-mail</label> 
        {{input class="pwa-generator-input" value=email placeholder="Enter a valid E-mail address"}}
      </div>
      {{#if invalidEmail}}
        <p class="pwa-generator-error">
            <i class="fa fa-exclamation"></i> Please, provide a valid E-mail address.
        </p>
      {{/if}}


      <div class="pwa-generator-buttons pure-g">
        <div class="pure-u-8-24">
          <div class="pure-g">
            <div class="pure-u-1-2">
              <button class="pwa-button pwa-button--spaced" {{action "accept"}}>
                Submit
              </button>
            </div>
            <div class="pure-u-1-2">
              <button class="pwa-button pwa-button--simple" {{action "close"}}>Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}
{{yield}}